# Website Configuration
WEBSITE_URL=https://example.com/login
USERNAME=your_username
PASSWORD=your_password

# Selectors - Update these based on your target website
LOGIN_USERNAME_SELECTOR="#username"
LOGIN_PASSWORD_SELECTOR="#password"
LOGIN_BUTTON_SELECTOR="#login-button"
TARGET_BUTTON_SELECTOR="#clock-in-button"

# Cron Schedule (default: Every weekday at 9 AM)
# Format: minute hour day-of-month month day-of-week
# Example: "0 9 * * 1-5" means 9 AM, Monday to Friday
CRON_SCHEDULE=0 9 * * 1-5

# Browser Configuration
HEADLESS=true
