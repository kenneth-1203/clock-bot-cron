# Website Configuration
WEBSITE_URL=https://example.com/login
USERNAME=your_username
PASSWORD=your_password

# Selectors - Update these based on your target website
LOGIN_USERNAME_SELECTOR="#username"
LOGIN_PASSWORD_SELECTOR="#password"
LOGIN_BUTTON_SELECTOR="#login-button"
CLOCK_IN_BUTTON_SELECTOR="#clock-in-button"
CLOCK_OUT_BUTTON_SELECTOR="#clock-out-button"
CLOCK_OUT_CONFIRM_BUTTON_SELECTOR="#confirm-clock-out-button"

# Save Activity Selectors (Optional - leave empty to disable)
# These selectors are used to automatically save activity after clock-in
ACTIVITY_NAVIGATION_BUTTON_SELECTOR="#activity-nav-button"
ACTIVITY_PROJECT_ITEM_SELECTOR="#activity-project-item"
ACTIVITY_LIST_ITEM_SELECTOR="#activity-list-item"
ACTIVITY_SAVE_BUTTON_SELECTOR="#activity-save-button"

# Cron Schedules
# Format: minute hour day-of-month month day-of-week
# Clock-In: Default is 9 AM, Monday to Friday
CLOCK_IN_SCHEDULE=0 9 * * 1-5
# Clock-Out: Default is 6 PM, Monday to Friday
CLOCK_OUT_SCHEDULE=0 18 * * 1-5

# Browser Configuration
HEADLESS=true
